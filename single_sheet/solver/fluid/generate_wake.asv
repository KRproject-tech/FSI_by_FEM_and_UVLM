    r_panel_vec_3_end = r_panel_vec_3(i_trail,:);
    r_panel_vec_31_end = r_panel_vec_3_end(1,:);                             %% Y=0 [m]‚É‚¨‚¯‚éWakeƒm[ƒh


    %%[2-1] •½”Âã‚Ì‰Qƒpƒlƒ‹‚É‚æ‚éŒã‰ƒpƒlƒ‹ƒm[ƒh‚Ö‚Ì—U“±‘¬“xŒvŽZ [m/s]
    r_trail_vec = [ r_panel_vec_2_end;
