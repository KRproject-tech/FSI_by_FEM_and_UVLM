    end
    
    
    

    N_wake = size( r_wake_2, 1);                                            %% Wakeƒpƒlƒ‹” [-]

    %%[2-4] Wakeƒm[ƒhÀ•W
    r_panel_vec_2_end = r_panel_vec_2(i_trail,:);
    r_panel_vec_3_end = r_panel_vec_3(i_trail,:);
