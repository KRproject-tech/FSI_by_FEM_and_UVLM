    r_wake_1_k1 = [ r_panel_vec_2_end;
                   r_wake_2_k1(1:end-Ny,:)];
    r_wake_4_k1 = [ r_panel_vec_3_end;
                   r_wake_3_k1(1:end-Ny,:)];  
               
    %%[*] zŠÂ‚Ì•Û‘¶
    %%% Kutta‚ÌðŒ‚ð–ž‚½‚·‚æ‚¤‚É•úo‰Q‚ðŒˆ‚ß‚éD
    Gamma_wake = [ Gamma_trail;
